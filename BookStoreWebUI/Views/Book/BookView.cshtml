@using BookStoreDomain.Entities
@using BookStoreWebUI.HTMLHelper
@using BookStoreWebUI.Models
@model BookListViewModel
@{
    ViewBag.Title = "List";
}

<h2>Book List</h2>
@*@Model.Count()*@

@foreach (var b in Model.Books)
{
    @Html.Partial("BookSummary", b);

}
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("BookView", "Book", new { pageno = x,category=Model.CurrentCategory }))
</div>
